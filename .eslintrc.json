{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": ["warn", "always"],
        "semi-style": ["error", "last"],
        "computed-property-spacing": ["warn", "always"],
        "array-bracket-spacing": ["warn", "always"],
        "object-curly-spacing": ["warn", "always"]
    }
}
